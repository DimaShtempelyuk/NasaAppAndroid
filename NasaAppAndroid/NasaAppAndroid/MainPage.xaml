<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NasaAppAndroid.MainPage">

    <StackLayout>
        <Frame BackgroundColor="AliceBlue" Padding="12" CornerRadius="0">
            <Label Text="AsteroidNasaAPI" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Label Text="Start developing now" FontSize="Title" Padding="30,10,30,10"/>
        <Label Text="Make changes to your XAML file and save to see your UI update in the running app with XAML Hot Reload. Give it a try!" FontSize="16" Padding="30,0,30,0"/>
        <Label FontSize="16" Padding="30,24,30,0"/>
        <DatePicker x:Name="StartDatePicker"
                    MinimumDate="01/01/2018"
            MaximumDate="12/31/2018"
            Date="06/21/2018" />
        <DatePicker x:Name="FinishDatePicker"
                    MinimumDate="01/01/2018"
            MaximumDate="12/31/2018"
            Date="06/21/2018"/>
        <Entry x:Name="EntryNumber"/>
        <Button x:Name="FindButton"/>
    </StackLayout>

</ContentPage>
